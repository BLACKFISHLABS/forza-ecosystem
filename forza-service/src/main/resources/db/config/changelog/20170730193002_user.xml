            <column name="state" value="Active"/>
            <column name="company_id" value="1"/>
            <column name="api_key" value="YWRtaW46YmxhY2tmaXNoQGxhYnM="/>
        </insert>
    </changeSet>

    <changeSet id="3" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="company_id"
                                 baseTableName="APP_USER" constraintName="FK_USER_COMPANY"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_COMPANY"/>
    </changeSet>

</databaseChangeLog>
