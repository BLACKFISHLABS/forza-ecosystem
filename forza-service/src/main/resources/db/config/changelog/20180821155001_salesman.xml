<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="blackfish">
        <createTable tableName="APP_SALESMAN">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="code" type="varchar(80)">
                <constraints nullable="false"/>
            </column>
            <column name="document" type="varchar(255)">
                <constraints unique="true" uniqueConstraintName="UK_SALESMAN_DOC" nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="last_change" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="apply_discount" type="boolean">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="2" author="blackfish">
        <insert tableName="APP_SALESMAN">
            <column name="id" value="1"/>
            <column name="created_at" value="now()"/>
            <column name="code" value="VND000001"/>
            <column name="document" value="191.000.000-00"/>
            <column name="password" value="qwerty"/>
            <column name="name" value="VENDEDOR INTERNO"/>
            <column name="phone" value="(65)9.9616-8022"/>
            <column name="email" value="salesman@admin.com"/>
            <column name="active" value="true"/>
            <column name="last_change" value="now()"/>
            <column name="apply_discount" value="true"/>
        </insert>
    </changeSet>

</databaseChangeLog>
