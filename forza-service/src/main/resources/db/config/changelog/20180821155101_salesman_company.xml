<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="blackfish">
        <createTable tableName="APP_SALESMAN_COMPANY">
            <column name="company_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="salesman_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="company_id"
                                 baseTableName="APP_SALESMAN_COMPANY" constraintName="FK_SALESMAN_COMPANY_COMPANY"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT" referencedColumnNames="ID"
                                 referencedTableName="APP_COMPANY"/>

        <addForeignKeyConstraint baseColumnNames="salesman_id"
                                 baseTableName="APP_SALESMAN_COMPANY" constraintName="FK_SALESMAN_COMPANY_SALESMAN"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT" referencedColumnNames="ID"
                                 referencedTableName="APP_SALESMAN"/>
    </changeSet>

    <changeSet id="3" author="blackfish">
        <insert tableName="APP_SALESMAN_COMPANY">
            <column name="company_id" value="1"/>
            <column name="salesman_id" value="1"/>
        </insert>
    </changeSet>

</databaseChangeLog>