    <changeSet id="1" author="blackfish">
        <createTable tableName="APP_CUSTOMER">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="code" type="varchar(80)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="fantasy_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="person_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="document" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="contact" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="main_phone" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="secondary_phone" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="address" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="postal_code" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="district" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="address_number" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="address_complement" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="pricetable_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="city_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="last_change" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="company_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="company_id"
                                 baseTableName="APP_CUSTOMER" constraintName="FK_CUSTOMER_COMPANY"
