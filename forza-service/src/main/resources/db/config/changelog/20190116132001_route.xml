<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="blackfish">
        <createTable tableName="APP_ROUTE">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="code" type="varchar(80)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="last_change" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="company_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="company_id"
                                 baseTableName="APP_ROUTE" constraintName="FK_ROUTE_COMPANY"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_COMPANY"/>
    </changeSet>

    <changeSet id="3" author="blackfish">
        <createTable tableName="APP_ROUTE_CUSTOMER">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="last_change" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="customer_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="route_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="customer_id"
                                 baseTableName="APP_ROUTE_CUSTOMER" constraintName="FK_ROUTE_CUSTOMER_CUSTOMER"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_CUSTOMER"/>
    </changeSet>

    <changeSet id="5" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="route_id"
                                 baseTableName="APP_ROUTE_CUSTOMER" constraintName="FK_ROUTE_CUSTOMER_ROUTE"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_ROUTE"/>
    </changeSet>

    <changeSet id="6" author="blackfish">
        <insert tableName="APP_ROUTE">
            <column name="id" value="1"/>
            <column name="created_at" value="now()"/>
            <column name="code" value="RT001"/>
            <column name="description" value="ROUTE DEFAULT"/>
            <column name="active" value="true"/>
            <column name="last_change" value="now()"/>
            <column name="company_id" value="1"/>
        </insert>
    </changeSet>

    <changeSet id="7" author="blackfish">
        <insert tableName="APP_ROUTE_CUSTOMER">
            <column name="id" value="1"/>
            <column name="created_at" value="now()"/>
            <column name="last_change" value="now()"/>
            <column name="customer_id" value="1"/>
            <column name="route_id" value="1"/>
        </insert>
    </changeSet>

    <changeSet id="8" author="blackfish">
        <insert tableName="APP_ROUTE_CUSTOMER">
            <column name="id" value="2"/>
            <column name="created_at" value="now()"/>
            <column name="last_change" value="now()"/>
            <column name="customer_id" value="2"/>
            <column name="route_id" value="1"/>
        </insert>
    </changeSet>
</databaseChangeLog>