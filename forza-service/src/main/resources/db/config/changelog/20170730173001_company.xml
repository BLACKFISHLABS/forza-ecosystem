<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="blackfish">
        <createTable tableName="APP_COMPANY">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="fantasy_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="company_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="cnpj" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="address_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="contact_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="company_type" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="pricetable_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="blackfish">
        <insert tableName="app_company">
            <column name="id" value="1"/>
            <column name="created_at" value="now()"/>
            <column name="fantasy_name" value="BLACKFISH LABS"/>
            <column name="company_name" value="JEFERSON OLIVEIRA CRUZ 02119377111"/>
            <column name="cnpj" value="34.465.273/0001-23"/>
            <column name="address_id" value="1"/>
            <column name="contact_id" value="1"/>
            <column name="company_type" value="COMPANY"/>
            <column name="pricetable_id" value="1"/>
        </insert>
    </changeSet>

    <changeSet id="3" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="address_id"
                                 baseTableName="APP_COMPANY" constraintName="FK_COMPANY_ADDRESS"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_ADDRESS"/>
    </changeSet>

    <changeSet id="4" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="contact_id"
                                 baseTableName="APP_COMPANY" constraintName="FK_COMPANY_CONTACT"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_CONTACT"/>
    </changeSet>

</databaseChangeLog>