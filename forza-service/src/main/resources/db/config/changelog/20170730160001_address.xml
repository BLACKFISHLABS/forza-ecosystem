<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="blackfish">
        <createTable tableName="APP_ADDRESS">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="street" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="number" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="location" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="neighborhood" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="complement" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="cep" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="city_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="blackfish">
        <insert tableName="app_address">
            <column name="id" value="1"/>
            <column name="created_at" value="now()"/>
            <column name="street" value="STREET"/>
            <column name="number" value="S/N"/>
            <column name="location" value="LOCATION"/>
            <column name="neighborhood" value="NEIGHBORHOOD"/>
            <column name="complement" value="COMPLEMENT"/>
            <column name="cep" value="78300-000"/>
            <column name="city_id" value="100"/>
        </insert>
    </changeSet>

    <changeSet id="3" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="city_id"
                                 baseTableName="APP_ADDRESS" constraintName="FK_ADDRESS_CITY"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_CITY"/>
    </changeSet>

</databaseChangeLog>