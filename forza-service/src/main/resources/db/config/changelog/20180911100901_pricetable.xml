<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="blackfish">
        <createTable tableName="APP_PRICE_TABLE">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="code" type="varchar(80)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="last_change" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="company_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="company_id"
                                 baseTableName="APP_PRICE_TABLE" constraintName="FK_PRICE_TABLE_COMPANY"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_COMPANY"/>
    </changeSet>

    <changeSet id="3" author="blackfish">
        <createTable tableName="APP_PRICE_TABLE_ITEM">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="price" type="currency">
                <constraints nullable="false"/>
            </column>
            <column name="stock" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="last_change" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="product_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="pricetable_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="APP_PRICE_TABLE_ITEM" constraintName="FK_PRICE_TABLE_PRODUCT"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_PRODUCT"/>
    </changeSet>

    <changeSet id="5" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="pricetable_id"
                                 baseTableName="APP_PRICE_TABLE_ITEM" constraintName="FK_PRICE_T_ITEM_PRICE_TABLE"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_PRICE_TABLE"/>
    </changeSet>

    <changeSet id="6" author="blackfish">
        <insert tableName="APP_PRICE_TABLE">
            <column name="id" value="1"/>
            <column name="created_at" value="now()"/>
            <column name="code" value="TB001"/>
            <column name="description" value="PRICE TABLE DEFAULT"/>
            <column name="active" value="true"/>
            <column name="last_change" value="now()"/>
            <column name="company_id" value="1"/>
        </insert>
    </changeSet>

    <changeSet id="7" author="blackfish">
        <insert tableName="APP_PRICE_TABLE_ITEM">
            <column name="id" value="1"/>
            <column name="created_at" value="now()"/>
            <column name="price" value="9999.99"/>
            <column name="stock" value="9999"/>
            <column name="last_change" value="now()"/>
            <column name="product_id" value="1"/>
            <column name="pricetable_id" value="1"/>
        </insert>
    </changeSet>

    <changeSet id="8" author="blackfish">
        <insert tableName="APP_PRICE_TABLE_ITEM">
            <column name="id" value="2"/>
            <column name="created_at" value="now()"/>
            <column name="price" value="999.99"/>
            <column name="stock" value="999"/>
            <column name="last_change" value="now()"/>
            <column name="product_id" value="2"/>
            <column name="pricetable_id" value="1"/>
        </insert>
    </changeSet>
</databaseChangeLog>
