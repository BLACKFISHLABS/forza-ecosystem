<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="blackfish">
        <createTable tableName="APP_ORDER">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="code" type="varchar(80)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="issue_date" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="discount" type="double">
                <constraints nullable="true"/>
            </column>
            <column name="discount_percentage" type="float">
                <constraints nullable="true"/>
            </column>
            <column name="note" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="customer_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="payment_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="pricetable_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_change" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="company_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="salesman_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="resume_code" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <column name="customer_code" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <column name="payment_code" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <column name="total" type="double">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="company_id"
                                 baseTableName="APP_ORDER" constraintName="FK_ORDER_COMPANY"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_COMPANY"/>
    </changeSet>

    <changeSet id="3" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="salesman_id"
                                 baseTableName="APP_ORDER" constraintName="FK_ORDER_SALESMAN"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_SALESMAN"/>
    </changeSet>

    <changeSet id="4" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="customer_id"
                                 baseTableName="APP_ORDER" constraintName="FK_ORDER_CUSTOMER"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_CUSTOMER"/>
    </changeSet>

    <changeSet id="5" author="blackfish">
        <createTable tableName="APP_ORDER_ITEM">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="product_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="sub_total" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="sales_price" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="last_change" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="order_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="unit_code" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <column name="product_code" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <column name="order_code" type="varchar(100)">
                <constraints nullable="true"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="6" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="APP_ORDER_ITEM" constraintName="FK_ORDER_ITEM_PRODUCT"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_PRODUCT"/>
    </changeSet>

    <changeSet id="7" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="order_id"
                                 baseTableName="APP_ORDER_ITEM" constraintName="FK_ORDER_ITEM_ORDER"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_ORDER"/>
    </changeSet>
</databaseChangeLog>
