<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="blackfish">
        <createTable tableName="APP_VEHICLE">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="plate" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="salesman_id" type="bigint">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="2" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="salesman_id"
                                 baseTableName="APP_VEHICLE" constraintName="FK_SALESMAN_VEHICLE"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_SALESMAN"/>
    </changeSet>

    <changeSet id="3" author="blackfish">
        <insert tableName="APP_VEHICLE">
            <column name="id" value="1"/>
            <column name="created_at" value="now()"/>
            <column name="description" value="KOMBI"/>
            <column name="plate" value="ABC0000"/>
            <column name="salesman_id" value="1"/>
        </insert>
    </changeSet>

</databaseChangeLog>