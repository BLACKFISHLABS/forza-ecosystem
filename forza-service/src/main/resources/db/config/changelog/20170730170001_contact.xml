<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="blackfish">
        <createTable tableName="APP_CONTACT">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_id" type="bigint">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="2" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="phone_id"
                                 baseTableName="APP_CONTACT" constraintName="FK_PHONE_CONTACT"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_PHONE"/>
    </changeSet>
    <changeSet id="3" author="blackfish">
        <insert tableName="app_contact">
            <column name="id" value="1"/>
            <column name="created_at" value="now()"/>
            <column name="name" value="CONTACT ONE"/>
            <column name="phone_id" value="1"/>
        </insert>
    </changeSet>

</databaseChangeLog>