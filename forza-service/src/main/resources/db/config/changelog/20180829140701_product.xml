<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="blackfish">
        <createTable tableName="APP_PRODUCT">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="code" type="varchar(80)">
                <constraints nullable="false"/>
            </column>
            <column name="ean" type="varchar(80)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="unit" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="group_id" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="note" type="varchar(4000)">
                <constraints nullable="true"/>
            </column>
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="last_change" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="company_id" type="bigint">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="2" author="blackfish">
        <addForeignKeyConstraint baseColumnNames="company_id"
                                 baseTableName="APP_PRODUCT" constraintName="FK_PRODUCT_COMPANY"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="ID"
                                 referencedTableName="APP_COMPANY"/>
    </changeSet>

    <changeSet id="3" author="blackfish">
        <insert tableName="APP_PRODUCT">
            <column name="id" value="1"/>
            <column name="created_at" value="now()"/>
            <column name="code" value="PRD000001"/>
            <column name="ean" value="0000000000000"/>
            <column name="description" value="PRODUTO INTERNO"/>
            <column name="unit" value="UN"/>
            <column name="group_id" value="BF"/>
            <column name="note" value="The best product ever"/>
            <column name="active" value="true"/>
            <column name="last_change" value="now()"/>
            <column name="company_id" value="1"/>
        </insert>
    </changeSet>

    <changeSet id="4" author="blackfish">
        <insert tableName="APP_PRODUCT">
            <column name="id" value="2"/>
            <column name="created_at" value="now()"/>
            <column name="code" value="PRD000002"/>
            <column name="ean" value="0000000000000"/>
            <column name="description" value="PRODUTO EXTERNO"/>
            <column name="unit" value="UN"/>
            <column name="group_id" value="BF"/>
            <column name="note" value="The second best product ever"/>
            <column name="active" value="true"/>
            <column name="last_change" value="now()"/>
            <column name="company_id" value="1"/>
        </insert>
    </changeSet>

</databaseChangeLog>
