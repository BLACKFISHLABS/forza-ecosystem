<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.github.blackfishlabs.forza">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ForzaApp.Theme"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Main screen -->
        <activity
            android:name=".ui.main.MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/ForzaApp.Theme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Initial Flow screen -->
        <activity
            android:name=".ui.initialflow.InitialFlowActivity"
            android:label="@string/initial_flow_title"
            android:theme="@style/ForzaApp.Theme.NoActionBar.Settings" />

        <!-- Settings screen -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/settings_title"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/ForzaApp.Theme.NoActionBar.Settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity" />
        </activity>

        <!-- Add Customer screen -->
        <activity
            android:name=".ui.addcustomer.AddCustomerActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/add_customer_title"
            android:theme="@style/ForzaApp.Theme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity" />
        </activity>

        <!-- City List screen -->
        <activity
            android:name=".ui.citylist.CityListActivity"
            android:label="@string/city_list_title"
            android:theme="@style/ForzaApp.Theme.NoActionBar" />

        <!-- Add Order screen -->
        <activity
            android:name=".ui.addorder.AddOrderActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/add_order_title"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/ForzaApp.Theme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity" />
        </activity>

        <!-- View Order screen -->
        <activity
            android:name=".ui.vieworder.ViewOrderActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/ForzaApp.Theme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity" />
        </activity>

        <!-- View Customer screen -->
        <activity
            android:name=".ui.viewcustomer.ViewCustomerActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/ForzaApp.Theme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity" />
        </activity>

        <!-- Import Resume -->
        <activity
            android:name=".ui.importation.ImportResumeActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/ForzaApp.Theme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity" />
        </activity>

        <service
            android:name=".data.sync.SyncTaskService"
            android:exported="true"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY" />
            </intent-filter>
        </service>

        <service
            android:name=".data.sync.InstantSyncService"
            android:exported="false" />
    </application>


</manifest>