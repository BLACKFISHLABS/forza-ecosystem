<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.importation.ImportationFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/keyline_medium"
        android:indeterminate="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/keyline_large"
        android:paddingRight="@dimen/keyline_large">

        <Button
            android:id="@id/button_all_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_retry"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/button_all_retry"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            android:fontFamily="sans-serif-light"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/importation_states_and_cities" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        style="@style/Widget.ForzaApp.RecyclerView"
        android:id="@+id/recycler_view_importation_companies"
        tools:listitem="@layout/list_item_importation" />

</LinearLayout>